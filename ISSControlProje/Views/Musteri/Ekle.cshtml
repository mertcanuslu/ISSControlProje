@using ISSControlProje.Models.Entity
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_PanelStyle.cshtml";
    iss_webEntities db = new iss_webEntities();
}


    <h2>Yeni Müşteri Ekle</h2>
    <br />
    <form method="POST" action="/Musteri/Ekle/" class="form-group-sm">
        <div class="form-group row">
            <label for="musteriTC" class="col-sm-2 col-form-label col-form-label-sm">TC Kimlik No</label>
            <div class="col-sm-10">
                <input maxlength="11" required type="text" class="form-control form-control-sm" id="musteriTC" name="musteriTC">
            </div>
        </div>
        <div class="form-group row">
            <label for="musteriAD" class="col-sm-2 col-form-label col-form-label-sm">Ad Soyad</label>
            <div class="col-sm-10">
                <input  maxlength="45" required  type="text" class="form-control form-control-sm" id="musteriAD" name="musteriAd">
            </div>
        </div>
        <div class="form-group row">
            <label for="musteriTEL" class="col-sm-2 col-form-label col-form-label-sm">Telefon</label>
            <div class="col-sm-10">
                <input  maxlength="15" required type="tel" class="form-control form-control-sm" id="musteriTEL" name="musteriTelefon">
            </div>
        </div>
        <div class="form-group">
            <label for="musteriPaket">Müşteriye Tanımlanacak İnternet Paketi</label>
            <select class="form-control" name="musteriPaket" id="musteriPaket">
                @foreach (var paket in db.tblPaketler)
                {
                    <option value="@paket.paketId">@paket.paketAd</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="musteriADRES">Adres</label>
            <input type="text" class="form-control" id="musteriADRES" name="musteriAdres" placeholder="Cadde, Sokak, Mahalle Daire">
        </div>
        <input maxlength="80" required type="submit" name="ekle" value="MÜŞTERİ EKLE" class="btn btn-success formGonder" />
    </form>
