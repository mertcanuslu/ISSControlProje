
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_PanelStyle.cshtml";
}

<h2>Yeni Paket Ekle</h2>

<form method="POST" action="/Paket/Ekle/" class="form-group-sm">
    <div class="form-group row">
        <label for="paketAd" class="col-sm-2 col-form-label col-form-label-sm">Paket Adı</label>
        <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="paketAd" name="paketAd">
        </div>
    </div>
    <div class="form-group row">
        <label for="paketFiyat" class="col-sm-2 col-form-label col-form-label-sm">Paket Fiyatı</label>
        <div class="col-sm-10">
            <input type="tel" class="form-control form-control-sm" id="paketFiyat" name="paketFiyat">
        </div>
    </div>
    <div class="form-group">
        <label for="paketAciklamasi">Paket Açıklaması</label> <br />
        <textarea name="paketAciklamasi" id="paketAciklamasi">

        </textarea>
    </div>
    <input type="submit" name="ekle" value="PAKET EKLE" class="btn btn-success" />
</form>

<script>
    CKEDITOR.replace('paketAciklamasi');
</script>